{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "outDir": "./dist",
    "jsx": "react",
    "sourceMap": true,
    "removeComments": false
  },

  "include": ["src", "stories", "@types"]
}
